{
	"name": "<%= name %>",
	"version": "1.0.0",
	"license": "MIT",
	"main": "api/index.js",
	"description": "<%= description %>",
	"scripts": {
		"preconfig": "cpx  \"../angular-project/dist/**/*.*\"  dist -C -p  && cd dist && cd .. ",
		"client": "cd ../angular-project && ng serve -o",
		"build.prod": "cd ../angular-project && ng build --prod",
		"watch": "cd ../angular-project && ng build --watch",
		"start": "npm run preconfig && node api/index.js",
		"server:dev": "nodemon --watch api api/index.js",
		"dev": "concurrently \"npm run watch\" \"gulp\""
	},
	"private": true,
	"dependencies": {
		"bluebird": "3.4.6",
		"body-parser": "1.15.2",
		"concurrently": "3.5.1",
		"dotenv": "4.0.0",
		"express": "4.14.0",
		"helmet": "3.1.0",
		"mongoose": "3.6.20",
		"morgan": "1.7.0",
		"tungus": "0.0.5"
	},
	"devDependencies": {
		"@angular/cli": "1.7.4",
		"browser-sync": "2.23.6",
		"gulp": "3.9.1",
		"gulp-nodemon": "2.2.1",
		"nodemon": "1.11.0"
	}
}
